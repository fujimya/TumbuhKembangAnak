<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:contentPadding="5dp"
    card_view:cardMaxElevation="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="3dp"
    android:layout_marginRight="10dp"
    card_view:cardBackgroundColor="@color/abuabu"
    android:id="@+id/cv_main"
    card_view:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Nama Balita (jenis kelamin)"
            android:id="@+id/nama_jk_balita"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Tempat, dd/mm/yy"
            android:id="@+id/tempat_tanggal"
            android:layout_below="@+id/nama_jk_balita"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>


        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="12sp"-->
            <!--android:textColor="@color/black"-->
            <!--android:text="Rp. 9870"-->
            <!--android:id="@+id/harga"-->
            <!--android:maxLines="1"-->
            <!--android:layout_marginTop="2dp"-->
            <!--android:layout_below="@+id/tempat_tamggal"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_marginRight="5dp"/>-->



    </RelativeLayout>

</android.support.v7.widget.CardView>



